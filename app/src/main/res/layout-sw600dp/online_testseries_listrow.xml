<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="horizontal"
   android:layout_margin="5dp">

    <LinearLayout
        android:id="@+id/onlineSeriesLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
       >




            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="15dp"
      >

                <TextView
                    android:id="@+id/paperName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/show_bookname"
                    android:textColor="@color/black"
                    android:textSize="23dp"

                    />




                <TextView
                    android:id="@+id/paperBy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="By UCC"
                    android:textColor="@color/gray"
                    android:textSize="18dp"
                    android:layout_marginTop="12dp"

            />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="bottom"
                    >



                    <TextView
                        android:id="@+id/ratingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.0"

                        android:textSize="19dp"



                        />
                    <RatingBar android:id="@+id/seriesitemRating"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        style="?android:attr/ratingBarStyle"
                        android:numStars="5"
                        android:stepSize="0.1"
                        android:isIndicator="true"


                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="22dp"
                        android:progressDrawable="@drawable/ratingbar_shape"/>
                    <TextView
                        android:id="@+id/no_of_reviews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reviewsno"
                        android:textColor="#0670C6"
                        android:textSize="20dp"
                        android:layout_weight=".9"

                        />

                </LinearLayout>
            </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="right"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/priceflag"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/orange_price"
                        />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/free"
                        android:id="@+id/priceText"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/white"
                        android:textSize="20dp"/>
                </RelativeLayout>

                </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>