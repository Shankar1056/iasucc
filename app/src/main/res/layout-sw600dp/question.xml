<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/quizLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E7E7E8">

    <include
        android:id="@+id/toolbar"
        layout="@layout/tool_bar" />



    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@color/white"
        >

        <Button
            android:id="@+id/Prev"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.01"
            android:text="@string/previous"
            android:textColor="@color/primary"
            android:textSize="28dp"
            android:gravity="center"
            android:paddingLeft="14dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/quesCount"
            android:textSize="28dp"
            android:textColor="@color/black"
            android:gravity="center"/>
        <Button
            android:id="@+id/Next"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.01"
            android:text="@string/next"
            android:textColor="@color/primary"
            android:textSize="28dp"
            android:gravity="center"
            android:paddingRight="14dp"
            />


    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_weight=".9">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
        android:layout_marginTop="25dp"

     >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
  android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp">
        <ImageView
            android:id="@+id/share"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/share"
            android:layout_margin="2dp"/>
    </LinearLayout>

        <TextView
        android:id="@+id/question"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
            android:padding="10dp"
            android:autoLink="all"
            android:textSize="20dp">
    </TextView>

        </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
  >
    <LinearLayout
        android:id="@+id/quizLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:clickable="false">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"

            >


        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/answers"
            android:layout_margin="10dp"
            >

                <LinearLayout

                    android:id="@+id/option1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"

                    >
                    <TextView
                        android:id="@+id/opt1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:text="A"
                        android:textColor="#6D6E70"
                        android:background="@drawable/rounded_circle"
                        android:textSize="16dp"
                        android:gravity="center"

                        />
                    <TextView
                        android:id="@+id/answer1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Black Notice"
                        android:textSize="20dp"
                        android:autoLink="all"
                        android:textColor="@color/questionTextDefault"
                        android:layout_marginLeft="22dp"


                        />
                </LinearLayout>
                <LinearLayout

                    android:id="@+id/option2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"

                    android:layout_marginTop="10dp"

                    >
                    <TextView
                        android:id="@+id/opt2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:text="B"
                        android:textColor="#6D6E70"
                        android:background="@drawable/rounded_circle"
                        android:textSize="16dp"
                        android:gravity="center"
                        />
                    <TextView
                        android:id="@+id/answer2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Black Notice"
                        android:textSize="20dp"
                        android:autoLink="all"
                        android:textColor="@color/questionTextDefault"
                        android:layout_marginLeft="22dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/option3"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="10dp"

                    >
                    <TextView
                        android:id="@+id/opt3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:text="C"
                        android:textColor="#6D6E70"
                        android:background="@drawable/rounded_circle"
                        android:textSize="16dp"
                        android:gravity="center"

                        />
                    <TextView
                        android:id="@+id/answer3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Orange Notice"
                        android:textColor="@color/questionTextDefault"
                        android:layout_marginLeft="22dp"
                        android:textSize="20dp"
                        android:autoLink="all"

                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/option4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="10dp"

                    >
                    <TextView
                        android:id="@+id/opt4"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:text="D"
                        android:textColor="#6D6E70"
                        android:background="@drawable/rounded_circle"
                        android:textSize="16dp"
                        android:gravity="center"

                        />
                    <TextView

                        android:id="@+id/answer4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Purple Notice"
                        android:textColor="@color/questionTextDefault"
                        android:layout_marginLeft="22dp"
                        android:textSize="20dp"
                        android:autoLink="all"

                        />
                </LinearLayout>
            </LinearLayout>

</LinearLayout>
    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="25dp"
            android:visibility="visible"
            >
           <!-- <TextView
                android:id="@+id/explainationhead"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="@string/explanation"
                android:padding="15dp"
                android:textColor="@color/black">
            </TextView>-->

            <TextView
                android:id="@+id/explaination"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:padding="15dp"
                android:autoLink="all">
            </TextView>

        </LinearLayout>


</LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
      android:layout_gravity="bottom"
        android:visibility="visible"
        >

        <TextView
            android:id="@+id/finish"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:text="@string/submit"
            android:textSize="35dp"
            android:typeface="serif"
            android:textColor="@color/white"
            android:gravity="center"
            android:padding="15dp"/>

    </LinearLayout>

</LinearLayout>