<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/topic">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/logo"
                        app:civ_border_color="#ffffff"
                        app:civ_border_width="2dp" />
                </LinearLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >


                    <ImageView
                        android:id="@+id/favourites"
                        android:layout_gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/check_favourites"
                        />

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toRightOf="@+id/ivCeteringitemthumb"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/postName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/user_name"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:layout_marginRight="43dp"
                            android:textColor="@color/primary"
                            android:textSize="@dimen/news_notifi_ques_title"/>




                        <TextView
                            android:id="@+id/dueTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/user_date"
                            android:textColor="#BCBEC0"
                            android:textSize="@dimen/news_notifi_ques_date"
                            android:layout_marginLeft="5dp"
                            android:gravity="start"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp">



                            <TextView
                                android:id="@+id/discussion"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/user_forum_topic"
                                android:textColor="@color/black"
                                android:textSize="@dimen/news_notifi_ques_text"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightgray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <LinearLayout
                    android:id="@+id/like"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".2"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <ImageView

                        android:id="@+id/liked"
                        android:layout_width="15dp"
                        android:layout_height="20dp"
                        android:src="@drawable/like"
                        android:layout_marginLeft="15dp"
                        android:layout_weight=".2"/>
                    <TextView
                        android:id="@+id/favlikecount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/like"
                        android:layout_weight=".7"
                        android:textSize="14dp"
                        android:textColor="@color/primary"

                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/comment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight=".2"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="20dp"
                        android:src="@drawable/comment"

                        android:layout_weight=".2"
                        />
                    <TextView
                        android:id="@+id/commentcount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/user_reply"
                        android:layout_weight=".3"
                        android:textColor="@color/primary"
                        android:textSize="14dp"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/submenu"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/index_grey"
                    android:layout_weight=".01"
                    android:layout_marginRight="15dp"
                    />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>